<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="6dp" />

            <solid android:color="#0F000000" />
        </shape>
    </item>

    <item
        android:bottom="1.5dp"
