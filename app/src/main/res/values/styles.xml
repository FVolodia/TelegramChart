<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light">
        <item name="android:colorPrimary" tools:targetApi="21">@color/primary</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/primaryDark</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/accent</item>

        <item name="android:statusBarColor" tools:targetApi="21">@color/status_bar</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/nav_bar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <item name="android:windowBackground">@color/window</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColor">?android:textColorPrimary</item>

        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="android:Widget.DeviceDefault.ActionBar.Solid">
        <item name="android:displayOptions">none</item>
        <item name="android:background">@color/action_bar</item>
        <item name="android:contentInsetStart" tools:targetApi="21">16dp</item>
    </style>

    <style name="Chart" />

    <style name="Chart.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:background">@color/background</item>
        <item name="android:elevation" tools:targetApi="21">2dp</item>
    </style>

    <style name="Chart.TitlesLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="Chart.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Chart.View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">312dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>

        <item name="chart_backgroundHint">@color/background</item>
        <item name="chart_guidesColor">@color/chart_guides</item>
        <item name="chart_guidesNumber">6</item>
        <item name="chart_guidesWidth">1dp</item>
        <item name="chart_labelsColor">@color/chart_labels</item>
        <item name="chart_labelsDotColor">@color/chart_guides</item>
        <item name="chart_labelsTextSize">12sp</item>
        <item name="chart_lineWidth">1.8dp</item>
        <item name="chart_pointRadius">4dp</item>
        <item name="chart_selectionColor">@color/chart_guides</item>
        <item name="chart_selectionWidth">1.5dp</item>
    </style>

    <style name="Chart.Finder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">1dp</item>

        <item name="chart_backgroundHint">@color/background</item>
        <item name="chart_foregroundColor">@color/finder_foreground</item>
        <item name="chart_frameColor">@color/finder_frame</item>
        <item name="chart_lineWidth">1dp</item>
    </style>

    <style name="Chart.Sources">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

</resources>
